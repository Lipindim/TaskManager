<r:RibbonWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager.GUI"
        xmlns:r="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" x:Class="TaskManager.GUI.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <StackPanel>

        <r:Ribbon x:Name="ribbon" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="80">
            <r:RibbonButton Name="menu_users" Background="Aqua" Width="100" Height="100" Click="menu_users_Click"></r:RibbonButton>
            <r:RibbonButton Background="Green" Width="100" Height="100"></r:RibbonButton>
        </r:Ribbon>
        <Canvas VerticalAlignment="Stretch" Name="canvas_content"></Canvas>

    </StackPanel>
</r:RibbonWindow>
